<div class="col">
  <div class="card h-100 shadow-sm">
    <% if product.image.attached? %>
      <%= image_tag product.image.variant(resize_to_fill: [300, 200]), class: "card-img-top", alt: product.name %>
    <% else %>
      <%= image_tag "placeholder-400x400.png", class: "card-img-top", alt: "No image available", style: "height: 280px; object-fit: cover;" %>
    <% end %>

    <div class="card-body d-flex flex-column">
      <h5 class="card-title d-flex align-items-center justify-content-between mb-2">
      <%= link_to product.name, product, class: "text-decoration-none text-dark" %>
      <% if product.quantity > 0 %>
        <span class="badge rounded-pill bg-success ms-2">
          <%= product.quantity %> in stock
        </span>
      <% else %>
        <span class="badge rounded-pill bg-danger ms-2">
          Out of stock
        </span>
      <% end %>
      </h5>
      <p class="card-text text-muted mb-3"><%= truncate(product.description, length: 80) %></p>
      <div class="mt-auto">
        <%= link_to "Add to Cart", "#", class: "btn btn-primary w-100" %>
      </div>
    </div>
  </div>
</div>
